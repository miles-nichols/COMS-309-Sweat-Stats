<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- First Chat Server -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Server URL (default to):"
        android:textSize="16sp"
        android:textColor="#333333"/>

    <EditText
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="ws://10.0.2.2:8080/chat/1/"
        android:textSize="18sp"
        android:id="@+id/serverEdt"
        android:backgroundTint="#4CAF50"
        android:padding="10dp"
        android:textColor="#333333"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:hint="Username"
        android:textSize="18sp"
        android:id="@+id/unameEdt"
        android:backgroundTint="#4CAF50"
        android:padding="10dp"
        android:textColor="#333333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Chat Server #1"
            android:id="@+id/connectBtn"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="12dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Chat Server #1"
            android:id="@+id/backBtn"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="40dp"
        android:background="#DDDDDD"/>

    <!-- Second Chat Server -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Server2 URL (default to):"
        android:textSize="16sp"
        android:textColor="#333333"/>

    <EditText
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="ws://10.0.2.2:8080/chat/2/"
        android:textSize="18sp"
        android:id="@+id/serverEdt2"
        android:backgroundTint="#4CAF50"
        android:padding="10dp"
        android:textColor="#333333"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:hint="Username"
        android:textSize="18sp"
        android:id="@+id/unameEdt2"
        android:backgroundTint="#4CAF50"
        android:padding="10dp"
        android:textColor="#333333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Chat Server #2"
            android:id="@+id/connectBtn2"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="12dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Chat Server #2"
            android:id="@+id/backBtn2"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp"
            android:padding="12dp"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
