<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/background_light">

    <!-- Editable Workout Name -->
    <EditText
        android:id="@+id/etWorkoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Enter Workout Name"
        android:background="@null"
        android:paddingBottom="8dp"
        android:maxLines="1"
        android:inputType="textCapWords" />

    <!-- Workout Description -->
    <EditText
        android:id="@+id/etWorkoutDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Workout Description"
        android:gravity="top"
        android:background="@null"
        android:lines="3"
        android:inputType="textMultiLine"
        android:paddingBottom="8dp" />

    <!-- RecyclerView for Lifts -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLifts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="16dp" />

    <!-- Floating Action Button for Adding Lifts -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddLift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:contentDescription="Add Lift"
        app:backgroundTint="@android:color/holo_blue_dark" />

    <!-- Save Workout Button -->
    <Button
        android:id="@+id/btnSaveWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save Workout"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

</LinearLayout>
