<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Community Name -->
        <TextView
            android:id="@+id/tvCommunityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Name: Fitness Enthusiasts"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <!-- Trainer Name -->
        <TextView
            android:id="@+id/tvTrainerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trainer: John Doe"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Community Description -->
        <TextView
            android:id="@+id/tvCommunityDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: A community for fitness enthusiasts to share tips, workouts, and motivate each other."
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Join/Leave Button -->
        <Button
            android:id="@+id/btnJoinLeaveCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Community"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:padding="10dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
